<div class="container d-flex justify-content-center align-items-center min-vh-100">
  <form id="signup-form" class='w-25 p-2 bg-secondary border border-4 border-dark rounded' style=' min-width: 400px;'>
    <h2 class="text-center">Come Join Us!</h2>
    <h3 class="text-center">Register below and start building decks!</h3>
    <div class='form-group'>
      <label for="username-signup" class="fw-bold">Username</label>
      <input type="text" id="username-signup" class='form-control' />
    </div>
    <div class='form-group'>
      <label for="email-signup" class="fw-bold">Email</label>
      <input type="text" id="email-signup" class='form-control' />
    </div>
    <div class='form-group'>
      <label for="password-signup" class="fw-bold">Password</label>
      <input type="password" id="password-signup" class='form-control' />
    </div>
    <div class="container d-flex justify-content-center">
      <button type="submit" class='btn btn-primary mt-2 fw-bolder w-75'>Register</button>
    </div>
  </form>
</div>
<script src="/js/register.js"></script>