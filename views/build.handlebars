<div class="container d-sm-flex w-100 ">
	<div class="row justify-content-center">
		<form id='search-card-form' class="justify-content-center bg-dark text-light border border-5 border-dark ">
			<p>Search By Card Name</p>
			<input type='text' id='search-card-input' placeholder='Card Name' />
			<p>Search By Card Type</p>
			<input type="text" placeholder="Card Type">
			<p>Search By Card Text</p>
			<input type="text" placeholder="Card Text">
		</form>
	</div>
	<div id='deck-builder-view' class="row w-100">
		<div class="container">
			<section id='card-view' class="d-flex flex-row flex-wrap">
				{{#each cards as |card|}}
				<img class="m-3" src='{{card.imageUrl}}' data-imageurl={{card.imageUrl}}
					data-multiverseId='{{card.multiverseid}}' />
				{{/each}}
			</section>
		</div>
	</div>
	<div class="bg-dark">
		<section id='deck-view'>
			<ul id='card-list' class='list-group'>
				<h3 id='deck-name' class='list-group-item mb-0'>{{deck.name}}</h3>
				{{#each deck.cards as |card|}}
				<li class='list-group-item bg-dark text-light border border-4 border-light rounded' data-imageUrl={{card.imageUrl}} data-multiverseId='{{card.multiverseid}}'>
					{{card.name}}</li>
				{{/each}}
			</ul>
		</section>
	</div>
</div>
</div>
<script src='/js/build-script.js'></script>